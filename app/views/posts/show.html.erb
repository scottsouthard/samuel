<% if logged_in? %>
  <div class="col-md-6">
    <%=link_to "Edit Show", edit_post_path %>
  </div>
  <br>
  <div class="col-md-6">
    <%=link_to "Delete Show", @post, :method => :delete, :confirm => "Yo, you sure?" %>
  </div>
<% end %>


<div class="container post-show">
  <h2> <%= @post.title %> </h2>
  <p class="date"> <%= @post.date.strftime("%m/%d/%Y") %> </p>
  <div class="container">
    <div class="row">


        <!-- <h3>Gallery</h3> -->
        <div class="col-lg-8 col-lg-push-2 col-md-6 col-md-push-3 pic-container">
          <% if @post.pictures.length % 4 == 0 %>
            <% @post.pictures.each do |pic| %>
               <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 thumb">
                 <a class= "thumbnail" href="#" data-image-id="" data-toggle="modal" data-image= "<%= pic.image.url%>" data-target="#image-gallery">
                   <%= image_tag(pic.image.url(:medium)) %>
                 </a>
              </div>
            <% end %>
          <% elsif @post.pictures.length % 3 == 0 %>
            <% @post.pictures.each do |pic| %>
               <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 thumb">
                 <a class= "thumbnail" href="#" data-image-id="" data-toggle="modal" data-image= "<%= pic.image.url%>" data-target="#image-gallery">
                   <%= image_tag(pic.image.url(:small)) %>
                 </a>
              </div>
            <% end %>
          <% elsif @post.pictures.length == 1 %>
            <% @post.pictures.each do |pic| %>
               <div class="col-lg-12 col-md-12 col-xs-12 thumb">
                 <a class= "thumbnail" href="#" data-image-id="" data-toggle="modal" data-image= "<%= pic.image.url%>" data-target="#image-gallery">
                   <%= image_tag(pic.image.url(:medium)) %>
                 </a>
              </div>
            <% end %>
            <% elsif @post.pictures.length == 2 %>
              <% @post.pictures.each do |pic| %>
              <div class="col-lg-6 col-md-6 col-xs-12 thumb">
                <a class= "thumbnail" href="#" data-image-id="" data-toggle="modal" data-image= "<%= pic.image.url%>" data-target="#image-gallery">
                  <%= image_tag(pic.image.url(:medium)) %>
                </a>
              </div>
              <% end %>
            <% elsif @post.pictures.length == 5 %>
              <% @post.pictures.each do |pic| %>
              <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 thumb col-md-push-1 col-lg-push-1 col-sm-push-1">
                <a class= "thumbnail" href="#" data-image-id="" data-toggle="modal" data-image= "<%= pic.image.url%>" data-target="#image-gallery">
                  <%= image_tag(pic.image.url(:medium)) %>
                </a>
              </div>
              <% end %>
            <% else %>
              <% @post.pictures.each do |pic| %>
              <div class="col-lg-2 col-md-2 col-xs-12 thumb">
                <a class= "thumbnail" href="#" data-image-id="" data-toggle="modal" data-image= "<%= pic.image.url%>" data-target="#image-gallery">
                  <%= image_tag(pic.image.url(:medium)) %>
                </a>
              </div>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>


      <!-- The Modal -->


<div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="image-gallery-title"></h4>
            </div>
            <div class="modal-body">
                <img id="image-gallery-image" class="img-responsive" src="">
            </div>
            <div class="modal-footer">

                <div class="">
                    <button type="button" class="btn btn-link" id="show-previous-image">Previous</button>
                </div>

                <div class="">
                    <button type="button" id="show-next-image" class="btn btn-link">Next</button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="pdf">
  <% if @post.document_file_name %>
  <i class="fa fa-file" aria-hidden="true"></i>
  <%= link_to @post.document.original_filename, @post.document.url %>
  <% end %>
</div>
<div class="gallery-line">
</div>
<div class=" col-lg-8 col-lg-push-2 col-md-8 col-md-push-2 description">
  <p> <%= simple_format(@post.description) %> </p>
</div>
