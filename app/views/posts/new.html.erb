<div class="container">
  <div class="jumbotron form-jumbo">
    <%= bootstrap_form_for @post, html: { multipart: true } do |f| %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "Enter Title" %>
      </div>
      <div class="form-group">
        <%= f.label :pictures %>
        <%= file_field_tag "images[]", type: :file, multiple: true %>
      </div>
      <!-- <div class="form-group">
        <%= f.label :pictures %>
        <%= file_field_tag "image" %>
      </div> -->
      <div class="form-group">
        <%= f.text_area :description, placeholder: "Write your words" %>
      </div>
      <div class="form-group">
        <%= f.date_field :date %>
      </div>
      <div class="form-group">
        <%= f.file_field :document %>
      </div>
        <%= f.submit "Create Post" %>
    <% end %>
  </div>
</div>
